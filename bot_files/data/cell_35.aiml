<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
  <!-- insert your AIML categories here -->
  <topic name="CELL35">
      <category>
          <pattern>LIST DOORS</pattern>
          <template>:door: *Exits:* `north` and `south` and `west`.
            
          </template>
      </category>

      <category>
          <pattern>GO <set>directions</set></pattern>
          <template>
           <think><set name="user_direction"><star /></set></think>
            <condition name="user_direction">
              
                <li value="north">
                    Moving north
                    <think><set name="topic">CELL16</set></think>
                    <srai>MOVETO 16</srai>
                </li>
                
              
                <li value="south">
                    Moving south
                    <think><set name="topic">CELL25</set></think>
                    <srai>MOVETO 25</srai>
                </li>
                
              
                <li value="west">
                    Moving west
                    <think><set name="topic">CELL28</set></think>
                    <srai>MOVETO 28</srai>
                </li>
                
              
              <li>There is no door in this direction</li>
            </condition>
          </template>
      </category>

      

      
        
          <category>
            <pattern>*</pattern>
            <template>
              <think><set name="puzzle_solution"><star /></set></think>
              <condition name="puzzle_solution">
                <li value="Authentication">
                  <srai>GOODANSWER</srai>
                  <srai>GIVECLUE A</srai>
                </li>
                <li>
                  <srai>WRONGANSWER</srai>
                </li>
              </condition>
            </template>
          </category>
        
      
  </topic>
</aiml>
